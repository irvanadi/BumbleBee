<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Relawan.Activities.CongratsRelawanActivity">


    <ImageView
        android:id="@+id/imgSalaman"
        android:layout_width="253.4dp"
        android:layout_height="245.4dp"
        android:src="@drawable/undraw_agreement_aajr"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txtTerimakasih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terima Kasih"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#f9b949"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@id/imgSalaman"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtTanggalTerimakasih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anda Telah Menjadi Relawan \nFood Heroes pada tanggal \n15 Desember 2019"
        app:layout_constraintTop_toBottomOf="@id/txtTerimakasih"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#00beed"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>