<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Activities.LoginActivity">


    <TextView
        android:id="@+id/txtLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Sebagai Relawan"
        android:textColor="#000"
        android:layout_marginTop="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/InputNumberPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtLogin"
        android:layout_marginTop="36dp">

        <AutoCompleteTextView
            android:id="@+id/txtNumberPhone"
            android:hint="No. Telepon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/InputPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/InputNumberPhone"
        android:layout_marginTop="8dp">

        <AutoCompleteTextView
            android:id="@+id/txtPassword"
            android:hint="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:id="@+id/cbIngatSaya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/InputPassword"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Ingat Saya"/>

    <TextView
        android:id="@+id/txtLupaPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lupa Password ?"
        android:clickable="true"
        android:fontFamily=""
        android:textColor="#EEAA54"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/InputPassword"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textAllCaps="false"
        android:background="#EEAA54"
        android:textColor="#fff"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/cbIngatSaya"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/txtToRegist1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Belum memiliki akun ?"
        android:layout_marginTop="16dp"
        android:layout_marginStart="62dp"
        app:layout_constraintTop_toBottomOf="@id/btnLogin"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/txtToRegist2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#EEAA54"
        android:text="Daftar Sekarang"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnLogin"
        app:layout_constraintStart_toEndOf="@id/txtToRegist1"
        android:clickable="true"
        />


</androidx.constraintlayout.widget.ConstraintLayout>